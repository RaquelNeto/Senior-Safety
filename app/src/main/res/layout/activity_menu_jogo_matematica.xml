<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <Button
        android:id="@+id/buttonSairMatematica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="85dp"
        android:layout_marginRight="85dp"
        android:layout_marginBottom="77dp"
        android:text="Sair"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonJogarMatematica"
        android:layout_width="351dp"
        android:layout_height="74dp"
        android:layout_above="@id/buttonSairMatematica"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="-2dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Jogar"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageViewMatematica"
        android:layout_width="319dp"
        android:layout_height="452dp"
        android:layout_above="@id/buttonJogarMatematica"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/matematica" />

</RelativeLayout>