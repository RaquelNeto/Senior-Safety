<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fall"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".DetetorQuedas.MainActivity">

    <TextView
        android:id="@+id/accelerometer_values"
        android:layout_width="321dp"
        android:layout_height="44dp"
        android:textSize="@dimen/font_test_accel_values" />

    <TextView
        android:id="@+id/textFallDetectionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonContactos"
        android:layout_marginBottom="280dp"
        android:background="@drawable/title"
        android:gravity="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="46sp" />

    <Button
        android:id="@+id/buttonContactos"
        android:layout_width="214dp"
        android:layout_height="168dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="@drawable/cell"
        android:onClick="onSettingsButtonClick" />

</RelativeLayout>
