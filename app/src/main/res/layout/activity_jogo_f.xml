                android:layout_weight = "1"
                android:id="@+id/buttonLetraV"
                android:text="V" />

            <Button
                android:layout_width= "0dp"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:id="@+id/buttonLetraW"
                android:text="W" />

            <Button
                android:layout_width= "0dp"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:id="@+id/buttonLetraX"
                android:text="X" />

            <Button
                android:id="@+id/buttonLetraY"
                android:layout_width= "0dp"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:text="Y" />

            <Button
                android:id="@+id/buttonLetraZ"
                android:layout_width= "0dp"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:text="Z" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
