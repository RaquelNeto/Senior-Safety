                android:layout_width= "0dp"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:id="@+id/buttonLetraR"
                android:text="R" />

            <Button
                android:layout_width= "0dp"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:id="@+id/buttonLetraS"
                android:text="S" />

            <Button
                android:layout_width= "0dp"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:id="@+id/buttonLetraT"
                android:text="T" />

